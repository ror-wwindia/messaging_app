<%= form_for @message, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label 'Select User', class: 'control-label' %>
    <div class="controls">
      <%= f.select :user_id, user_options %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label 'Your Name', class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Your Email', class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label 'Your Message', class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :content, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                users_path, :class => 'btn' %>
  </div>
<% end %>
